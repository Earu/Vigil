{
	"name": "vigil",
	"private": true,
	"version": "0.0.0",
	"description": "A secure password manager",
	"author": "Ryan",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"electron:dev": "concurrently \"vite\" \"node electron/build.mjs && cross-env NODE_ENV=development electron dist-electron/main.js\"",
		"electron:build": "tsc -b && vite build && node electron/build.mjs && electron-builder"
	},
	"dependencies": {
		"argon2-browser": "^1.18.0",
		"kdbxweb": "^2.1.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@types/react": "^18.3.17",
		"@types/react-dom": "^18.3.5",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^29.4.6",
		"electron-builder": "^24.13.3",
		"esbuild": "^0.20.2",
		"typescript": "~5.6.2",
		"vite": "^6.0.3",
		"vite-plugin-electron": "^0.28.8"
	},
	"main": "dist-electron/main.js",
	"build": {
		"appId": "com.vigil.app",
		"productName": "Vigil",
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"files": [
			"dist/**/*",
			"dist-electron/**/*",
			"package.json"
		],
		"extraMetadata": {
			"main": "dist-electron/main.js"
		},
		"mac": {
			"target": "dmg",
			"icon": "build/icons/icon.icns"
		},
		"linux": {
			"target": "AppImage"
		},
		"win": {
			"target": "nsis",
			"icon": "build/icons/icon.ico"
		}
	}
}
