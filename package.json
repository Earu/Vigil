{
  "name": "vigil",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development && concurrently \"vite\" \"node electron/build.mjs && electron dist-electron/main.js\"",
    "electron:build": "cross-env NODE_ENV=production && tsc -b && vite build && node electron/build.mjs && electron-builder --dir"
  },
  "dependencies": {
    "kdbxweb": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.vigil.app",
    "productName": "Vigil",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "mac": {
      "target": "dir",
      "arch": ["arm64"]
    },
    "linux": {
      "target": "dir",
      "arch": ["x64"]
    },
    "win": {
      "target": "dir",
      "arch": ["x64"]
    }
  }
}
